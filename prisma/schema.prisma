generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// --- User

model User {
  id                   Int    @id @default(autoincrement())
  name                 Int
  email                String
  photo_url            String
  password_hash        String
  gender               String
  age                  Int
  bio                  String
  growth               Int
  current_weight       Int
  desired_weight       Int
  waist_circumference  Int
  chest_weight         Int
  thight_circumference Int
  arm_circumference    Int
}
